{% extends 'base.html.twig' %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <ul>
      <h3>{{detailArticle.TitreArticle}}</h3>
        <h4>Le {{detailArticle.dateArticle | date('d-m-Y')}}</h4>
          <article>
                {{detailArticle.TextArticle}}
                <br />
                <strong>Auteur {{detailArticle.User.userName}}</strong>
                <br />
                <strong>Nombre de Like : {{detailArticle.LikeArticle}}</strong>
          </article>
    </ul>
<ul>
  <li>Les commentaires</li>
  {% for index in Comments %}
    <li>
      <ul>
        <li>Auteur : {{index.Auteur.userName}}</li>
        <li>{{index.textComments}}</li>
      </ul>
    </li>
  {% endfor %}
</ul>

</div>
{% endblock %}
